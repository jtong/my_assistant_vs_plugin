{
    "name": "my-assistant",
    "description": "plugin of chat assistant and job management client",
    "version": "0.0.4",
    "publisher": "jtong",
    "icon": "media/chat-icon.png",
    "repository": "https://github.com/jtong/my_assistant_vs_plugin",
    "engines": {
        "vscode": "^1.74.0"
    },
    "activationEvents": [
        "*"
    ],
    "categories": [
        "Machine Learning"
    ],
    "main": "./extension.js",
    "files": [
        "extension.js",
        "agentLoader.js",
        "agentViewProvider.js",
        "logger.js",
        "chat/**",
        "job/**",
        "agent_marketplace/**",
        "media/**",
        "node_modules/**"
    ],
    "contributes": {
        "configuration": {
            "title": "My Assistant Configuration",
            "properties": {
                "myAssistant.apiKey": {
                    "type": "object",
                    "default": {
                        "openai": "",
                        "gemini": "",
                        "anthropic": ""
                    },
                    "description": "API keys for different services (e.g., OpenAI, Gemini)",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "myAssistant.agentRepositoryUrl": {
                    "type": "string",
                    "default": "https://raw.githubusercontent.com/your-repo/agents/main/agent-list.json",
                    "description": "URL or local path to the agent repository JSON file"
                }
            }
        },
        "commands": [
            {
                "command": "myAssistant.newChat",
                "title": "New Chat",
                "icon": "$(plus)"
            },
            {
                "command": "myAssistant.deleteChat",
                "title": "Delete Chat"
            },
            {
                "command": "myAssistant.renameChat",
                "title": "Rename Chat"
            },
            {
                "command": "myAssistant.refreshChatList",
                "title": "Refresh Chat List",
                "icon": "$(refresh)"
            },
            {
                "command": "myAssistant.openSettingsEditor",
                "title": "Edit Settings"
            },
            {
                "command": "myAssistant.revealInExplorer",
                "title": "Reveal in Explorer"
            },
            {
                "command": "myAssistant.newJob",
                "title": "New Job",
                "icon": "$(plus)"
            },
            {
                "command": "myAssistant.deleteJob",
                "title": "Delete Job"
            },
            {
                "command": "myAssistant.renameJob",
                "title": "Rename Job"
            },
            {
                "command": "myAssistant.refreshAgentMarketplace",
                "title": "Refresh Agent Marketplace",
                "icon": "$(refresh)"
            },
            {
                "command": "myAssistant.installAgent",
                "title": "Install Agent"
            },
            {
                "command": "myAssistant.newAppThread",
                "title": "Show VSGradio Interface"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "chatSidebar",
                    "title": "Chat",
                    "icon": "media/chat-icon.png"
                }
            ]
        },
        "views": {
            "chatSidebar": [
                {
                    "id": "chatList",
                    "name": "Chat List",
                    "type": "tree"
                },
                {
                    "id": "jobList",
                    "name": "Job List",
                    "type": "tree"
                },
                {
                    "id": "agentMarketplace",
                    "name": "Agent Marketplace",
                    "type": "webview"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "myAssistant.newChat",
                    "when": "view == chatList",
                    "group": "navigation"
                },
                {
                    "command": "myAssistant.newJob",
                    "when": "view == jobList",
                    "group": "navigation"
                },
                {
                    "command": "myAssistant.refreshChatList",
                    "when": "view == chatList",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "myAssistant.renameChat",
                    "when": "view == chatList && viewItem == chat",
                    "group": "1_modification"
                },
                {
                    "command": "myAssistant.openSettingsEditor",
                    "when": "view == chatList && viewItem == chat",
                    "group": "1_modification"
                },
                {
                    "command": "myAssistant.revealInExplorer",
                    "when": "view == chatList && viewItem == chat",
                    "group": "1_modification"
                },
                {
                    "command": "myAssistant.deleteChat",
                    "when": "view == chatList && viewItem == chat",
                    "group": "2_modification"
                },
                {
                    "command": "myAssistant.renameJob",
                    "when": "view == jobList && viewItem == job",
                    "group": "1_modification"
                },
                {
                    "command": "myAssistant.deleteJob",
                    "when": "view == jobList && viewItem == job",
                    "group": "2_modification"
                }
            ]
        }
    },
    "scripts": {
        "package": "webpack --mode development",
        "package:production": "webpack --mode production",
        "webpack-dev": "webpack --mode development --watch"
    },
    "devDependencies": {
        "@types/vscode": "^1.73.0"
    },
    "dependencies": {
        "adm-zip": "^0.5.9",
        "ai-agent-response": "^1.0.9",
        "axios": "^1.6.8",
        "handlebars": "^4.7.8",
        "js-yaml": "^4.1.0",
        "vsgradio": "^0.0.1"
    }
}

{
    "name": "my-assistant",
    "description": "plugin of teaching you everything in closed knowledge context with LLM.)",
    "version": "0.0.1",
    "publisher": "jtong",
    "icon": "media/chat-icon.png",
    "repository": "https://github.com/jtong/my_assistant_vs_plugin",
    "engines": {
        "vscode": "^1.74.0"
    },
    "activationEvents": [
        "*"
    ],
    "categories": [
        "Machine Learning"
    ],
    "main": "./extension.js",
    "files": [
        "extension.js",
        "agentLoader.js",
        "agentViewProvider.js",
        "logger.js",
        "chat/**",
        "job/**",
        "media/**",
        "node_modules/**"
    ],
    "contributes": {
        "configuration": {
            "title": "My Assistant Configuration",
            "properties": {
                "myAssistant.apiKey": {
                    "type": "object",
                    "default": {
                        "openai": "",
                        "gemini": "",
                        "anthropic": ""
                    },
                    "description": "API keys for different services (e.g., OpenAI, Gemini)",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            }
        },
        "commands": [
            {
                "command": "myAssistant.newChat",
                "title": "New Chat",
                "icon": "$(plus)"
            },
            {
                "command": "myAssistant.deleteChat",
                "title": "Delete Chat"
            },
            {
                "command": "myAssistant.renameChat",
                "title": "Rename Chat"
            },
            {
                "command": "myAssistant.openSettingsEditor",
                "title": "Edit Settings"
            },
            {
                "command": "myAssistant.newJob",
                "title": "New Job",
                "icon": "$(plus)"
            },
            {
                "command": "myAssistant.deleteJob",
                "title": "Delete Job"
            },
            {
                "command": "myAssistant.renameJob",
                "title": "Rename Job"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "chatSidebar",
                    "title": "Chat",
                    "icon": "media/chat-icon.png"
                }
            ]
        },
        "views": {
            "chatSidebar": [
                {
                    "id": "chatList",
                    "name": "Chat List",
                    "type": "tree"
                },
                {
                    "id": "jobList",
                    "name": "Job List",
                    "type": "tree"
                },
                {
                    "id": "agentList",
                    "name": "Available Agents",
                    "type": "tree"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "myAssistant.newChat",
                    "when": "view == chatList",
                    "group": "navigation"
                },
                {
                    "command": "myAssistant.newJob",
                    "when": "view == jobList",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "myAssistant.renameChat",
                    "when": "view == chatList && viewItem == chat",
                    "group": "1_modification"
                },
                {
                    "command": "myAssistant.renameJob",
                    "when": "view == jobList && viewItem == job",
                    "group": "1_modification"
                },
                {
                    "command": "myAssistant.openSettingsEditor",
                    "when": "view == chatList && viewItem == chat",
                    "group": "1_modification"
                },
                {
                    "command": "myAssistant.deleteChat",
                    "when": "view == chatList && viewItem == chat",
                    "group": "2_modification"
                },
                {
                    "command": "myAssistant.deleteJob",
                    "when": "view == jobList && viewItem == job",
                    "group": "2_modification"
                }
            ]
        }
    },
    "scripts": {
        "package": "webpack --mode development",
        "package:production": "webpack --mode production",
        "webpack-dev": "webpack --mode development --watch"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.4",
        "@types/vscode": "^1.73.0",
        "babel-loader": "^9.1.3",
        "terser-webpack-plugin": "^5.3.10",
        "webpack": "^5.94.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "ai-agent-response": "^1.0.7",
        "axios": "^1.6.8",
        "handlebars": "^4.7.8",
        "js-yaml": "^4.1.0"
    }
}
